<Window x:Class="openTill.GUI.loginPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="loginPrompt" MaxHeight="300px" MaxWidth="300px" Height="300" Width="300" MinHeight="300px" MinWidth="300px" WindowStyle="None">
	<Grid Margin="0,0,-24,-27">
		<Label Content="Please Login" FontSize="18" Margin="90,72,51,203" Foreground="#FF007ACF" />
		<TextBox Height="20px" ToolTip="Please type a Username" Name="txtUsername" Margin="91,117,107,133"/>
		<PasswordBox PasswordChar="*" Height="20px" Name="txtPass" ToolTip="Please type a Password" Margin="91,142,107,108"/>
		<Button Height="20px" ToolTip="Submit" Content="Submit" Name="btnSubmit" Margin="91,167,107,83" Foreground="White" Background="#FF007ACF" Click="btnSubmit_Click" />
		<Button Height="20px" ToolTip="Cancel" Content="Cancel" Name="btnCancel" Margin="91,203,107,69" Click="btnCancel_Click" Foreground="White" Background="#FF007ACF" />
	</Grid>
</Window>
