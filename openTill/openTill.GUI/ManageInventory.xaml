<Window x:Class="openTill.GUI.ManageInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Inventory" MinHeight="350" Height="502" Width="570"
		MinWidth="570" VerticalAlignment="Top" HorizontalAlignment="Left">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*">

			</ColumnDefinition>
			<ColumnDefinition>

			</ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="25px">

			</RowDefinition>
			<RowDefinition Height="17*">

			</RowDefinition>
		</Grid.RowDefinitions>


		<Button Grid.Column="1" Grid.Row="1" Content="Add to Inventory" Width="150px" Height="30px" Name="btnAddInv" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Add Item to Inventory" Margin="0,50,10,0" Foreground="White" Background="#FF007ACF" Click="btnAddInv_Click"/>
		<Button Grid.Column="1"  Grid.Row="1" Content="Remove from Inventory" Width="150px" Height="30px" Name="btnRemoveInv" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Remove Item from Inventory" Margin="0,111,10,0" Foreground="White" Background="#FF007ACF" Click="btnRemoveInv_Click"/>
		<Button Grid.Column="1" Grid.Row="1" Content="Edit Inventory Item" Width="150px" Height="30px" Name="btnEditInv" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Edit Item in Inventory" Margin="0,178,10,0" Foreground="White" Click="btnEditInv_Click" Background="#FF007ACF"/>
		<Button Grid.Column="1" Grid.Row="1" Content="Find in Inventory" Width="150px" Height="30px" Name="btnFindItem" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Find Item in Inventory" Margin="0,243,10,0" Foreground="White" Background="#FF007ACF" Click="btnFindItem_Click" />
		<TextBox Grid.Column="0" Text="Item Name" Name="txtItemName" ToolTip="Type an Item Name" Margin="6,25,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="214" />
		<TextBox Grid.Column="0" Text="Item Description" Name="txtItemDescription" ToolTip="type an Item Description" Margin="6,60,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="89" Width="337" />

		<Label Grid.Row="1"  Content="Brand:&#xD;&#xA;" Grid.Column="0" Margin="6,224,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Height="29" />
		<Button Content="Browse" Width="106" Height="28" x:Name="btnAddInv_Copy" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Browse Items in Inventory" Margin="237,22,0,0" Foreground="White" Background="#FF007ACF" Grid.Row="1" />
		<Label Content="EDIT ITEM" Name="lblContextName" Margin="133,0,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold" HorizontalAlignment="Left" Grid.Row="1" />
		<Label x:Name="Lb_UPC_" Content="UPC #:" HorizontalAlignment="Left" Margin="6,154,0,0" VerticalAlignment="Top" Width="81" Grid.Row="1" />
		<TextBox x:Name="txtUPC" HorizontalAlignment="Left" Height="23" ToolTip="Type a UPC code" Margin="87,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Width="151"/>
		<Label x:Name="Lb_Category" Content="Category:" 
		  HorizontalAlignment="Left" Grid.Row="1"  Margin="6,186,0,0" VerticalAlignment="Top" Width="81"/>
		<TextBox x:Name="txtMinAge" Grid.Row="1" ToolTip="Some items (such as alcoholic beverages, require a minimum age." HorizontalAlignment="Left" Height="23" Margin="99,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
		<ComboBox Grid.Column="0" Grid.Row="1" x:Name="cboItem_Brand" HorizontalAlignment="Left" Margin="87,224,0,0" VerticalAlignment="Top" Width="215" ToolTip="Select the Brand of an item" Background="#FF007ACF" Foreground="White"/>
		<Label Grid.Row="1"  x:Name="Lb_StorePrice" Content="Store Price:" HorizontalAlignment="Left" Margin="6,258,0,0" VerticalAlignment="Top" Width="81"/>
		<TextBox Grid.Row="1"  x:Name="txtStorePrice" ToolTip="Cost of the Item to the Store" HorizontalAlignment="Left" Height="23" Margin="87,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
		<Label x:Name="Lb_SellingPrice" Content="Selling Price:" HorizontalAlignment="Left" Margin="185,260,0,0" Grid.Row="1"   VerticalAlignment="Top" Width="81"/>
		<TextBox x:Name="txtOnHand" ToolTip="Quantity of Items" Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="87,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
		<TextBox Grid.Row="1" x:Name="txtSellingPrice" ToolTip="Price of an item to be sold to a Customer" HorizontalAlignment="Left" Height="23" Margin="266,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
		<Label x:Name="Lb_OnHand" Grid.Row="1" Content="On Hand:" HorizontalAlignment="Left" Margin="6,296,0,0" VerticalAlignment="Top" Width="81"/>
		<Label x:Name="Lb_UPC__Copy3" Grid.Row="1" ToolTip="Is this Item Tax Exempt?" Content="Is Taxable:" HorizontalAlignment="Left" Margin="200,328,0,0" VerticalAlignment="Top" Width="66"/>
		<Label x:Name="Lb_HasDeposit" Grid.Row="1" ToolTip="Does this item have a recyclible deposit (such as Soda Pop)" Content="Has Deposit:" HorizontalAlignment="Left" Margin="6,328,0,0" VerticalAlignment="Top" Width="81"/>
		<Label x:Name="Lb_MinimumAge" Content="Minimum Age:" HorizontalAlignment="Left" Grid.Row="1" Margin="6,359,0,0" VerticalAlignment="Top" Width="99"/>
		<RadioButton x:Name="Radbtn_YesDeposit" Grid.Row="1" Content="Yes" HorizontalAlignment="Left" Margin="88,335,0,0" VerticalAlignment="Top"/>
		<RadioButton Grid.Row="1" x:Name="Radbtn_NoDeposit_Copy" Content="No" HorizontalAlignment="Left" Margin="133,335,0,0" VerticalAlignment="Top"/>
		<RadioButton x:Name="Radbtn_YesTaxble" Grid.Row="1" Content="Yes" HorizontalAlignment="Left" Margin="266,335,0,0" VerticalAlignment="Top"/>
		<RadioButton Grid.Row="1" x:Name="Radbtn_NoTaxble" Content="No" HorizontalAlignment="Left" Margin="311,335,0,0" VerticalAlignment="Top"/>
		<Label Grid.Row="1" Content="ADD NEW ITEM" HorizontalAlignment="Center" Margin="154,10,105.333,0" VerticalAlignment="Top" Width="116" FontWeight="Bold" Visibility="Hidden"/>
		<Button Grid.Row="1" Content="Save" ToolTip="Save changes to item" Width="66" Height="28" x:Name="btnInvSave" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,399,0,0" Foreground="White" Background="#FF007ACF"/>
		<Button Content="Cancel" Width="66" Grid.Row="1" Height="28" x:Name="btnInvCancel" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Cancel Changes to Item" Margin="83,399,0,0" Foreground="White" Background="#FF007ACF"/>
		<Button Content="Clear" Grid.Row="1" Width="66" Height="28" x:Name="btnInvClear" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Clear above fields" Margin="154,399,0,0" Foreground="White" Background="#FF007ACF" Click="btnInvClear_Click"/>
		<Button Grid.Row="0" Grid.Column="1" Width="20px" Height="20px" Name="btnSearch" Margin="0,1,28,0" HorizontalAlignment="Right" VerticalAlignment="Top" OpacityMask="#FF007ACF" Background="#FF007ACF" Panel.ZIndex="1">
			<Image Source="search_glass.png" OpacityMask="#FF007ACF"></Image>
		</Button>
		<Button Grid.Row="0" Grid.Column="1" Width="20px" Margin="0,1,2,0" Name="btnSettings" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#FF007ACF" Panel.ZIndex="1">
			<Image Source="gear.png" VerticalAlignment="Top" HorizontalAlignment="Right" OpacityMask="#FF007ACF"/>
		</Button>
		<Rectangle Stretch="UniformToFill"
				   Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}"  Fill="#FF007ACF" Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" Grid.Row="0" Grid.ColumnSpan="2"/>
		<Button Content="Choose Categories" Width="150" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Browse Items in Inventory" Margin="88,189,0,0" Foreground="White" Background="#FF007ACF" Name="btnChooseCat" Grid.Row="1" Click="btnChooseCat_Click" />


	</Grid>
</Window>
